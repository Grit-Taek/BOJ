#include <iostream>

using namespace std;
int main()
{
    int n;
    scanf("%d", &n);
    if(n == 1)
    {
        printf("1");
        return 0;
    }
    int sum = 0;
    int cnt = 0;
    while(n >= sum)
    {
        cnt++;
        sum = 2 + 3*cnt*(cnt-1);
    }

    printf("%d", cnt);
    return 0;
}
